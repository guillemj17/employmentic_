<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".editables.faqFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/nombreMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preguntas frecuentes (FAQ)"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                />

            <!-- Pregunta 1  -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pregunta1"
                android:layout_below="@id/nombreMenu"
                app:cardCornerRadius="4dp"
                android:backgroundTint="@color/grisOscuro"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Cómo se puede cambiar el nombre en EmploymenTic?"
                        android:drawablePadding="10dp"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:id="@+id/tv_pregunta1"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/respuesta1"
                android:layout_below="@id/pregunta1"
                app:cardCornerRadius="4dp"
                android:backgroundTint="@color/grisClaro"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp" >

                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No es posible el cambio de nombre. Esto se hace con el fin de evitar la creación de cuentas masivas o de cambios de identidad repentinos."
                        android:drawablePadding="10dp"
                        android:textSize="20dp"
                        android:id="@+id/tv_respuesta1"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Aqui acaba la primera -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pregunta2"
                android:layout_below="@id/respuesta1"
                app:cardCornerRadius="4dp"
                android:backgroundTint="@color/grisOscuro"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Cómo puedo editar mi perfil?"
                        android:drawablePadding="10dp"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:id="@+id/tv_pregunta2"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/respuesta2"
                android:layout_below="@id/pregunta2"
                app:cardCornerRadius="4dp"
                android:backgroundTint="@color/grisClaro"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp" >

                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Desde el menú principal se puede acceder a la pantalla de tu perfil. Al entrar a este menú, únicamente hay que pulsar el botón con un icono de un lápiz dependiendo del campo que quieras editar."
                        android:drawablePadding="10dp"
                        android:textSize="20dp"
                        android:id="@+id/tv_respuesta2"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pregunta3"
                android:layout_below="@id/respuesta2"
                app:cardCornerRadius="4dp"
                android:backgroundTint="@color/grisOscuro"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Hay que pagar para usar EmploymenTic?"
                        android:drawablePadding="10dp"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:id="@+id/tv_pregunta3"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/respuesta3"
                android:layout_below="@id/pregunta3"
                app:cardCornerRadius="4dp"
                android:backgroundTint="@color/grisClaro"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp" >

                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No, la descarga de EmploymenTic es totalmente gratuita desde Google Play."
                        android:drawablePadding="10dp"
                        android:textSize="20dp"
                        android:id="@+id/tv_respuesta3"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pregunta4"
                android:layout_below="@id/respuesta3"
                app:cardCornerRadius="4dp"
                android:backgroundTint="@color/grisOscuro"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Cómo puedo saber si una empresa me escoge para una oferta de empleo?"
                        android:drawablePadding="10dp"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:id="@+id/tv_pregunta4"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/respuesta4"
                android:layout_below="@id/pregunta4"
                app:cardCornerRadius="4dp"
                android:backgroundTint="@color/grisClaro"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp" >

                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Al inscribirte a una oferta de empleo, se enviarán automáticamente tus datos al correo electrónico ofrecido por la empresa. Ellos podrán elegir contactarte mediante correo electrónico, por mensaje telefónico, llamada telefónica o algún otro medio que se haya aportado en el currículum."
                        android:drawablePadding="10dp"
                        android:textSize="20dp"
                        android:id="@+id/tv_respuesta4"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pregunta5"
                android:layout_below="@id/respuesta4"
                app:cardCornerRadius="4dp"
                android:backgroundTint="@color/grisOscuro"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Qué puedo hacer si se me olvida la contraseña?"
                        android:drawablePadding="10dp"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:id="@+id/tv_pregunta5"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/respuesta5"
                android:layout_below="@id/pregunta5"
                app:cardCornerRadius="4dp"
                android:backgroundTint="@color/grisClaro"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp" >

                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="En el caso de cierre de sesión y olvido de contraseña, se podrá recuperar la cuenta de manera muy sencilla. Únicamente hay que pulsar en el botón de “He olvidado mi contraseña”. Tras ello, se llevará al usuario a una nueva pantalla donde se podrá introducir el correo electrónico. Tras ello, solo hay que seguir los pasos que se indican en el correo que llegará a la dirección ofrecida."
                        android:drawablePadding="10dp"
                        android:textSize="20dp"
                        android:id="@+id/tv_respuesta5"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>




        </RelativeLayout>
    </ScrollView>
</FrameLayout>